{
  "IsEncrypted": false,
  "Values": {
    "AzureWebJobsStorage": "UseDevelopmentStorage=true",
    "FUNCTIONS_WORKER_RUNTIME": "dotnet-isolated",
    "AzureWebJobsFeatureFlags": "EnableWorkerIndexing",
    
    "# Search Service Configuration": "# Choose 'azure-search' or 'simplified'",
    "SEARCH_SERVICE_TYPE": "simplified",
    
    "# Azure AI Search Configuration": "# Required when SEARCH_SERVICE_TYPE=azure-search",
    "AZURE_SEARCH_SERVICE_ENDPOINT": "https://your-search-service.search.windows.net",
    "AZURE_SEARCH_API_KEY": "your-search-service-api-key",
    "AZURE_SEARCH_INDEX_NAME": "ragsearch-documents",
    
    "# Azure AI Services Configuration": "# Required for document processing",
    "AZURE_AI_SERVICES_ENDPOINT": "https://your-ai-services.cognitiveservices.azure.com",
    "AZURE_AI_SERVICES_API_KEY": "your-ai-services-api-key",
    
    "# Azure OpenAI Configuration": "# Required for embeddings and vector search",
    "AZURE_OPENAI_ENDPOINT": "https://your-openai-service.openai.azure.com/",
    "AZURE_OPENAI_API_KEY": "your-openai-api-key",
    "AZURE_OPENAI_DEPLOYMENT_NAME": "text-embedding-3-small",
    
    "# Copilot Agent Configuration": "# GitHub MCP server and MS Docs integration",
    "GITHUB_TOKEN": "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
    "GITHUB_REPO_ALLOWLIST": "LukeDuffy98/RagSearch",
    "GITHUB_API_BASE": "https://api.github.com",
    "MSDOCS_ALLOWED_HOSTS": "learn.microsoft.com,docs.microsoft.com",
    "MSDOCS_CACHE_TTL_SECONDS": "86400",
    "AGENT_LOG_LEVEL": "info",
    "AGENT_REQUEST_TIMEOUT_MS": "30000",
    
    "# MCP Server Configuration": "# Model Context Protocol settings",
    "MCP_SERVER_TRANSPORT": "stdio",
    "MCP_SERVER_COMMAND": "npx @modelcontextprotocol/server-github",
    "MCP_SERVER_HEALTH_CHECK_INTERVAL_MS": "60000",
    "MCP_SERVER_MAX_RETRIES": "3",
    "MCP_SERVER_RETRY_DELAY_MS": "1000",
    
    "# Rate Limiting Configuration": "# External API call limits",
    "GITHUB_RATE_LIMIT_PER_HOUR": "5000",
    "MSDOCS_RATE_LIMIT_PER_HOUR": "1000",
    "CIRCUIT_BREAKER_FAILURE_THRESHOLD": "5",
    "CIRCUIT_BREAKER_TIMEOUT_MS": "60000",
    
    "# Observability Configuration": "# Logging and metrics",
    "ENABLE_VERBOSE_LOGGING": "false",
    "ENABLE_METRICS_COLLECTION": "true",
    "LOG_REDACTION_ENABLED": "true",
    "TELEMETRY_CORRELATION_ID_HEADER": "x-correlation-id"
  }
}